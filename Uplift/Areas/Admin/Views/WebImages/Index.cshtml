
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Image list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" asp-controller="WebImages" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Upload New Image</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                </th>
            </tr>
        </thead>
    </table>
</div>

@section scripts{
    <script src="~/js/webImage.js"></script>
}